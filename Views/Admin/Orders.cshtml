@model IEnumerable<EShopOnWeb.Models.Order>
@{
    ViewData["Title"] = "Transactions";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">
                <i class="bi bi-receipt-cutoff text-primary me-2"></i>Transactions
            </h2>
            <p class="text-muted mb-0">View all customer orders and payments</p>
        </div>
        <div>
            <a asp-action="Products" class="btn-premium btn-outline-premium">
                <i class="bi bi-box-seam me-2"></i>Manage Products
            </a>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="py-3 ps-4">Order ID</th>
                        <th class="py-3">Date</th>
                        <th class="py-3">Customer</th>
                        <th class="py-3">Items</th>
                        <th class="py-3 text-end pe-4">Total Amount</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-semibold">#@item.Id</td>
                            <td>
                                <div>@item.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy")</div>
                                <small class="text-muted">@item.CreatedAt.ToLocalTime().ToString("hh:mm tt")</small>
                            </td>
                            <td>
                                <div class="fw-medium">@item.CustomerName</div>
                                <small class="text-muted">@item.CustomerEmail</small>
                            </td>
                            <td>
                                <div class="d-flex flex-column gap-1">
                                    @foreach (var orderItem in item.Items)
                                    {
                                        <div class="d-flex align-items-center">
                                            <span class="badge bg-light text-dark border me-2">@orderItem.Quantity x</span>
                                            <span class="text-truncate" style="max-width: 200px;" title="@orderItem.Product?.Name">
                                                @(orderItem.Product?.Name ?? "Unknown Product")
                                            </span>
                                        </div>
                                    }
                                </div>
                            </td>
                            <td class="text-end pe-4">
                                <span class="fw-bold text-success fs-5">
                                    @item.TotalAmount.ToString("C")
                                </span>
                            </td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5">
                                <div class="text-muted">
                                    <i class="bi bi-cart-x display-4 d-block mb-3"></i>
                                    <h5>No transactions found</h5>
                                    <p>Orders will appear here once customers checkout.</p>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
