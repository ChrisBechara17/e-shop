<div id="chat-widget-container" class="chat-widget-closed">
    <div id="chat-header" class="chat-header">
        <div class="d-flex align-items-center">
            <i class="bi bi-robot me-2"></i>
            <span class="fw-bold">AI Assistant</span>
        </div>
        <button id="close-chat-btn" class="btn btn-sm btn-link text-white p-0">
            <i class="bi bi-x-lg"></i>
        </button>
    </div>
    <div id="chat-messages" class="chat-messages">
        <div class="chat-message bot-message">
            Hi! I'm your AI shopping assistant. I can help you find products or add them to your cart. How can I help?
        </div>
    </div>
    <div class="chat-input-area">
        <input type="text" id="chat-input" class="form-control" placeholder="Type a message..." />
        <button id="send-chat-btn" class="btn btn-primary">
            <i class="bi bi-send"></i>
        </button>
    </div>
</div>

<button id="open-chat-btn" class="chat-launcher">
    <i class="bi bi-chat-dots-fill"></i>
</button>
