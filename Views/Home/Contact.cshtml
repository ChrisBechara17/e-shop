@{
    ViewData["Title"] = "Contact Us";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="text-center mb-5">
                <span class="badge bg-primary-subtle text-primary rounded-pill px-3 py-2 mb-3">Get in Touch</span>
                <h1 class="display-4 fw-bold mb-3">We're Here to Help</h1>
                <p class="lead text-muted">have questions? We'd love to hear from you. Send us a message and we'll respond as soon as possible.</p>
            </div>

            <div class="row g-5">
                <!-- Contact Info -->
                <div class="col-md-5">
                    <div class="d-flex flex-column gap-4">
                        <div class="d-flex p-3 rounded-4 bg-light align-items-center">
                            <div class="bg-white p-3 rounded-circle shadow-sm me-3 text-primary">
                                <i class="bi bi-geo-alt fs-4"></i>
                            </div>
                            <div>
                                <h5 class="fw-bold mb-1">Visit Us</h5>
                                <p class="mb-0 text-muted">123 Commerce St, Beirut,<br>Lebanon</p>
                            </div>
                        </div>

                        <div class="d-flex p-3 rounded-4 bg-light align-items-center">
                            <div class="bg-white p-3 rounded-circle shadow-sm me-3 text-primary">
                                <i class="bi bi-envelope fs-4"></i>
                            </div>
                            <div>
                                <h5 class="fw-bold mb-1">Email Us</h5>
                                <p class="mb-0 text-muted">support@eshoponweb.com<br>info@eshoponweb.com</p>
                            </div>
                        </div>

                        <div class="d-flex p-3 rounded-4 bg-light align-items-center">
                            <div class="bg-white p-3 rounded-circle shadow-sm me-3 text-primary">
                                <i class="bi bi-telephone fs-4"></i>
                            </div>
                            <div>
                                <h5 class="fw-bold mb-1">Call Us</h5>
                                <p class="mb-0 text-muted">+961 1 234 567<br>Mon-Fri from 9am to 6pm</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Contact Form -->
                <div class="col-md-7">
                    <div class="form-premium p-4 p-md-5">
                        <form>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">First Name</label>
                                    <input type="text" class="form-control form-control-premium" placeholder="John" required>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Last Name</label>
                                    <input type="text" class="form-control form-control-premium" placeholder="Doe" required>
                                </div>
                                <div class="col-12">
                                    <label class="form-label fw-semibold">Email Address</label>
                                    <input type="email" class="form-control form-control-premium" placeholder="john@example.com" required>
                                </div>
                                <div class="col-12">
                                    <label class="form-label fw-semibold">Subject</label>
                                    <select class="form-select form-control-premium">
                                        <option>General Inquiry</option>
                                        <option>Order Support</option>
                                        <option>Product Information</option>
                                    </select>
                                </div>
                                <div class="col-12">
                                    <label class="form-label fw-semibold">Message</label>
                                    <textarea class="form-control form-control-premium" rows="4" placeholder="How can we help you?" required></textarea>
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="btn-premium btn-primary-premium w-100 py-3 mt-2" onclick="alert('Message sent! We will contact you shortly.'); return false;">
                                        Send Message <i class="bi bi-send ms-2"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
