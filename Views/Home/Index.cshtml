@model IEnumerable<EShopOnWeb.Models.Product>
@{
    ViewData["Title"] = "Welcome";
}

<div class="p-5 mb-4 bg-light rounded-3">
    <div class="container py-5">
        <h1 class="display-5 fw-bold">Welcome to EShopOnWeb</h1>
        <p class="col-md-8 fs-5">Browse curated products and checkout quickly using our simple cart experience.</p>
        <a class="btn btn-primary btn-lg" asp-controller="Products" asp-action="Index">Shop Now</a>
    </div>
</div>

<h2 class="mb-3">Featured Products</h2>
<div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
    @foreach (var product in Model)
    {
        <div class="col">
            <div class="card h-100">
                <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" />
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text text-muted">@product.Price.ToString("C")</p>
                    <a class="btn btn-outline-primary mt-auto" asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">View</a>
                </div>
            </div>
        </div>
    }
</div>
