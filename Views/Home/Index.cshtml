@model IEnumerable<EShopOnWeb.Models.Product>
@{
    ViewData["Title"] = "Welcome";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 hero-content">
                <h1 class="hero-title animate-fade-in-up">
                    Discover <span>Premium</span> Products for Your Lifestyle
                </h1>
                <p class="hero-subtitle animate-fade-in-up animate-delay-1">
                    Shop our curated collection of high-quality products. From tech gadgets to home essentials, 
                    find everything you need with fast shipping and exceptional service.
                </p>
                <div class="d-flex gap-3 animate-fade-in-up animate-delay-2">
                    <a class="btn-premium btn-primary-premium" asp-controller="Products" asp-action="Index">
                        <i class="bi bi-bag-fill"></i> Shop Now
                    </a>
                    <a class="btn-premium btn-secondary-premium" href="#categories">
                        <i class="bi bi-grid-3x3-gap"></i> Browse Categories
                    </a>
                </div>
            </div>
            <div class="col-lg-6 d-none d-lg-block text-center animate-fade-in-up animate-delay-3">
                <img src="https://cdn-icons-png.flaticon.com/512/3144/3144456.png" alt="Shopping" style="max-width: 400px; filter: drop-shadow(0 20px 40px rgba(99,102,241,0.3));" />
            </div>
        </div>
    </div>
</section>

<!-- Categories Section -->
<section class="container py-5" id="categories">
    <div class="section-header">
        <h2 class="section-title">Shop by Category</h2>
        <p class="section-subtitle">Find exactly what you're looking for</p>
        <div class="section-divider"></div>
    </div>
    <div class="row g-4">
        <div class="col-6 col-md-3">
            <a asp-controller="Products" asp-action="Index" asp-route-categoryId="1" class="text-decoration-none">
                <div class="category-card">
                    <div class="category-icon">
                        <i class="bi bi-book"></i>
                    </div>
                    <div class="category-name">Books</div>
                    <div class="category-count">2 Products</div>
                </div>
            </a>
        </div>
        <div class="col-6 col-md-3">
            <a asp-controller="Products" asp-action="Index" asp-route-categoryId="2" class="text-decoration-none">
                <div class="category-card">
                    <div class="category-icon">
                        <i class="bi bi-headphones"></i>
                    </div>
                    <div class="category-name">Electronics</div>
                    <div class="category-count">3 Products</div>
                </div>
            </a>
        </div>
        <div class="col-6 col-md-3">
            <a asp-controller="Products" asp-action="Index" asp-route-categoryId="3" class="text-decoration-none">
                <div class="category-card">
                    <div class="category-icon">
                        <i class="bi bi-house"></i>
                    </div>
                    <div class="category-name">Home & Kitchen</div>
                    <div class="category-count">3 Products</div>
                </div>
            </a>
        </div>
        <div class="col-6 col-md-3">
            <a asp-controller="Products" asp-action="Index" asp-route-categoryId="4" class="text-decoration-none">
                <div class="category-card">
                    <div class="category-icon">
                        <i class="bi bi-trophy"></i>
                    </div>
                    <div class="category-name">Fitness</div>
                    <div class="category-count">4 Products</div>
                </div>
            </a>
        </div>
    </div>
</section>

<!-- Featured Products Section -->
<section class="container py-5">
    <div class="section-header">
        <h2 class="section-title">Featured Products</h2>
        <p class="section-subtitle">Handpicked favorites just for you</p>
        <div class="section-divider"></div>
    </div>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
        @foreach (var product in Model)
        {
            <div class="col">
                <div class="product-card">
                    <div class="product-card-image">
                        <img src="@product.ImageUrl" alt="@product.Name" />
                        <div class="product-card-overlay">
                            <a class="btn-premium btn-primary-premium" asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">
                                <i class="bi bi-eye"></i> Quick View
                            </a>
                        </div>
                        @if (product.Price > 100)
                        {
                            <span class="product-badge">Premium</span>
                        }
                    </div>
                    <div class="product-card-body">
                        <span class="product-category">@product.Category?.Name</span>
                        <h5 class="product-title">@product.Name</h5>
                        <div class="star-rating">
                            <i class="bi bi-star-fill star"></i>
                            <i class="bi bi-star-fill star"></i>
                            <i class="bi bi-star-fill star"></i>
                            <i class="bi bi-star-fill star"></i>
                            <i class="bi bi-star-half star"></i>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="product-price">@product.Price.ToString("C")</span>
                            <form asp-controller="Cart" asp-action="Add" method="post" class="d-inline">
                                <input type="hidden" name="productId" value="@product.Id" />
                                <input type="hidden" name="quantity" value="1" />
                                <button type="submit" class="btn-cart" title="Add to Cart">
                                    <i class="bi bi-cart-plus"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="text-center mt-5">
        <a class="btn-premium btn-outline-premium" asp-controller="Products" asp-action="Index">
            View All Products <i class="bi bi-arrow-right ms-2"></i>
        </a>
    </div>
</section>

<!-- Trust Badges Section -->
<section class="container py-5">
    <div class="row g-4 text-center">
        <div class="col-md-3 col-6">
            <div class="p-4">
                <i class="bi bi-truck fs-1 text-primary mb-3 d-block"></i>
                <h6 class="fw-bold">Free Shipping</h6>
                <small class="text-muted">On orders over $50</small>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="p-4">
                <i class="bi bi-shield-check fs-1 text-primary mb-3 d-block"></i>
                <h6 class="fw-bold">Secure Payment</h6>
                <small class="text-muted">100% protected</small>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="p-4">
                <i class="bi bi-arrow-counterclockwise fs-1 text-primary mb-3 d-block"></i>
                <h6 class="fw-bold">Easy Returns</h6>
                <small class="text-muted">30 day guarantee</small>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="p-4">
                <i class="bi bi-headset fs-1 text-primary mb-3 d-block"></i>
                <h6 class="fw-bold">24/7 Support</h6>
                <small class="text-muted">Here to help</small>
            </div>
        </div>
    </div>
</section>

