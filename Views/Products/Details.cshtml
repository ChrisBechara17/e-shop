@model EShopOnWeb.Models.Product
@{
    ViewData["Title"] = Model.Name;
}

<div class="row">
    <div class="col-md-6">
        <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Name" />
    </div>
    <div class="col-md-6">
        <h1>@Model.Name</h1>
        <p class="text-muted">@Model.Category?.Name</p>
        <h3 class="text-primary">@Model.Price.ToString("C")</h3>
        <p>@Model.Description</p>

        <form asp-controller="Cart" asp-action="Add" method="post" class="mt-3">
            <input type="hidden" name="productId" value="@Model.Id" />
            <div class="mb-3">
                <label class="form-label">Quantity</label>
                <input type="number" class="form-control" name="quantity" value="1" min="1" />
            </div>
            <button type="submit" class="btn btn-primary">Add to Cart</button>
            <a class="btn btn-outline-secondary" asp-action="Index">Back to Products</a>
        </form>
    </div>
</div>
