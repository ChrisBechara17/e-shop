@model EShopOnWeb.ViewModels.ProductListViewModel
@{
    ViewData["Title"] = "Products";
}

<!-- Page Header -->
<div class="page-header">
    <div class="container">
        <nav class="breadcrumb-premium">
            <span class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></span>
            <span class="breadcrumb-separator">/</span>
            <span class="breadcrumb-item active">Products</span>
        </nav>
        <h1 class="page-title">Our Products</h1>
        <p class="page-subtitle">Discover our curated collection of premium products</p>
    </div>
</div>

<div class="container py-4">
    <div class="row">
        <!-- Sidebar Filters -->
        <div class="col-lg-3 mb-4">
            <div class="filter-sidebar">
                <h5 class="filter-title"><i class="bi bi-funnel me-2"></i>Categories</h5>
                <div class="d-flex flex-wrap gap-2">
                    <a asp-action="Index" class="filter-pill @(Model.SelectedCategoryId == null ? "active" : "")">
                        All Products
                    </a>
                    @foreach (var category in Model.Categories)
                    {
                        <a asp-action="Index" asp-route-categoryId="@category.Id" 
                           class="filter-pill @(Model.SelectedCategoryId == category.Id ? "active" : "")">
                            @category.Name
                        </a>
                    }
                </div>
            </div>
        </div>

        <!-- Products Grid -->
        <div class="col-lg-9">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <p class="text-muted mb-0">
                    Showing <strong>@Model.Products.Count()</strong> products
                    @if (Model.SelectedCategoryId.HasValue)
                    {
                        var selectedCategory = Model.Categories.FirstOrDefault(c => c.Id == Model.SelectedCategoryId);
                        <span>in <strong>@selectedCategory?.Name</strong></span>
                    }
                </p>
            </div>

            <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-4">
                @foreach (var product in Model.Products)
                {
                    <div class="col">
                        <div class="product-card">
                            <div class="product-card-image">
                                <img src="@product.ImageUrl" alt="@product.Name" />
                                <div class="product-card-overlay">
                                    <a class="btn-premium btn-primary-premium" asp-action="Details" asp-route-id="@product.Id">
                                        <i class="bi bi-eye"></i> View Details
                                    </a>
                                </div>
                                @if (product.Price > 150)
                                {
                                    <span class="product-badge">Premium</span>
                                }
                            </div>
                            <div class="product-card-body">
                                <span class="product-category">@product.Category?.Name</span>
                                <h5 class="product-title">@product.Name</h5>
                                <p class="product-description">@product.Description</p>
                                <div class="star-rating">
                                    <i class="bi bi-star-fill star"></i>
                                    <i class="bi bi-star-fill star"></i>
                                    <i class="bi bi-star-fill star"></i>
                                    <i class="bi bi-star-fill star"></i>
                                    <i class="bi bi-star star empty"></i>
                                </div>
                                <div class="d-flex justify-content-between align-items-center mt-auto">
                                    <span class="product-price">@product.Price.ToString("C")</span>
                                    <form asp-controller="Cart" asp-action="Add" method="post" class="d-inline">
                                        <input type="hidden" name="productId" value="@product.Id" />
                                        <input type="hidden" name="quantity" value="1" />
                                        <button type="submit" class="btn-cart" title="Add to Cart">
                                            <i class="bi bi-cart-plus"></i> Add
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            @if (!Model.Products.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-search fs-1 text-muted mb-3 d-block"></i>
                    <h4>No products found</h4>
                    <p class="text-muted">Try selecting a different category</p>
                    <a asp-action="Index" class="btn-premium btn-primary-premium">View All Products</a>
                </div>
            }
        </div>
    </div>
</div>

